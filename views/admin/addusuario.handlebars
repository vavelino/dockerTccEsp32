<h3>Cadastro de Novo Usuário:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/usuario/novo" method="POST">
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" placeholder="Nome do usuário" class="form-control">

            <label for="tag">RFID TAG:</label>
            <input type="text" id="tag" name="tag" placeholder="RFID TAG" class="form-control">
            <br>
            <button type="submit" class="btn btn-success">Cadastrar Novo Usuário</button>
        </form>
        <a href="/admin/usuario"><button class="btn btn-danger mt-2">Cancelar</button></a>
    </div>
</div>
{{#each erros}}

<div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}