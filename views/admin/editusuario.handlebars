{{#each dados}}

<h3>Editar Usuário:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/usuario/editar" method="POST">
        <input type="hidden" name="id" value="{{id}}">
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" placeholder="Nome do usuário" class="form-control" value="{{nome}}">

            <label for="numero">RFID TAG:</label>
            <input type="text" id="numero" name="numero" placeholder="RFID TAG" class="form-control" value="{{numero}}">
            <br>            
            <button type="submit" class="btn btn-success">Editar Usuário</button>            
        </form>
        <a href="/admin/usuario"><button class="btn btn-danger mt-2">Cancelar</button></a>
    </div>
</div>
{{/each}}